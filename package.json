{
    "name": "keepsake",
    "version": "1.0.0",
    "description": "Healthcare Facility Management System",
    "private": true,
    "scripts": {
        "refactor": "node scripts/refactor.js",
        "refactor:frontend": "node scripts/refactor-frontend.js",
        "refactor:backend": "python scripts/refactor-backend.py",
        "refactor:all": "npm run refactor:frontend -- --all && npm run refactor:backend -- --all",
        "refactor:essential": "npm run refactor:frontend -- --lint --format && npm run refactor:backend -- --essential",
        "refactor:analyze": "node scripts/refactor.js --analyze",
        "refactor:interactive": "node scripts/refactor.js --interactive",
        "install:all": "npm run install:frontend && npm run install:backend",
        "install:frontend": "cd client && npm install",
        "install:backend": "cd server && pip install -r requirements.txt",
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "frontend": "cd client && npm run dev",
        "backend": "cd server && venv\\Scripts\\activate && py main.py",
        "build": "cd client && npm run build",
        "lint": "cd client && npm run lint",
        "test": "echo \"Configure test command based on your test setup\""
    },
    "workspaces": [
        "client"
    ],
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Znarfieeee/KEEPSAKE-CAPSTONE.git"
    },
    "author": "KEEPSAKE Team",
    "license": "Proprietary"
}
